<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <ImageView
      android:id="@+id/ivOneDay"
      android:layout_width="@dimen/dimen125dp"
      android:layout_height="@dimen/dimen125dp"
      android:paddingTop="@dimen/dimen5dp"
      android:paddingBottom="@dimen/dimen5dp"

      android:background="@null"
      android:scaleType="fitXY"
      />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_toLeftOf="@+id/ivDone"
              android:orientation="vertical">
              <TextView
                  android:textAllCaps="true"
                  android:textColor="@color/black"
                  android:textStyle="bold"
                  android:textSize="@dimen/text_size_18"
                  android:id="@+id/tvTitle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:textColor="@color/gray_dark"
                  android:textSize="@dimen/text_size_16"
                  android:id="@+id/tvTime"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
          </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dimen25dp"
            android:layout_height="@dimen/dimen25dp"
            android:id="@+id/ivDone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen5dp"
            android:layout_marginLeft="@dimen/dimen5dp"
            android:src="@drawable/ic_check"
             android:visibility="invisible"
            />
        <ImageView
            android:layout_alignParentBottom="true"
               android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1dp"
            android:background="@color/gray_dark"
         />
    </RelativeLayout>
</LinearLayout>