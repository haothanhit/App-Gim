<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_card_potential"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen10dp">
        />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:layout_toRightOf="@+id/ivBack"
            android:text="@string/reports"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24"
            />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dimen5dp"
                android:paddingBottom="@dimen/dimen5dp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen5dp"
                >
                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:text="@string/total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20"
                    />
                <LinearLayout
                    android:layout_below="@+id/tvTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:textAlignment="center"
                            android:id="@+id/tvWorkouts"
                            android:layout_marginTop="@dimen/dimen10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dimen10dp"
                            android:text="0"
                            android:textStyle="bold"
                            android:textColor="@color/blue_dark"
                            android:textSize="@dimen/text_size_20"
                            />   <TextView
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:text="@string/workouts"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="bold"
                        />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:textAlignment="center"
                            android:id="@+id/tvKcal"
                            android:layout_marginTop="@dimen/dimen10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dimen10dp"
                            android:text="3"
                            android:textStyle="bold"
                            android:textColor="@color/blue_dark"
                            android:textSize="@dimen/text_size_20"
                            />   <TextView
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:text="@string/kcal"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="bold"
                        />
                    </LinearLayout>   <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:textAlignment="center"
                        android:id="@+id/tvtime"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:text="1s"
                        android:textStyle="bold"
                        android:textColor="@color/blue_dark"
                        android:textSize="@dimen/text_size_20"
                        />   <TextView
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:text="@string/time"
                    android:textAllCaps="true"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    />
                </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen10dp"
                android:layout_toRightOf="@+id/ivBack"
                android:text="@string/history"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20"
                />
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="@string/ad_banner_id">
            </com.google.android.gms.ads.AdView>
            <TextView
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen10dp"
                android:layout_toRightOf="@+id/ivBack"
                android:text="@string/weight"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20"
                 />d
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dimen5dp"
                android:paddingBottom="@dimen/dimen5dp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen5dp"
                >
                <TextView
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:layout_toLeftOf="@+id/tvEditBMI"
                    android:text="BMI(kg/m2)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20"
                     />
                <TextView
                    android:id="@+id/tvEditBMI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:textAllCaps="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue_dark"
                    android:textSize="@dimen/text_size_20"
                    android:layout_marginRight="@dimen/dimen10dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dimen5dp"
                android:paddingBottom="@dimen/dimen5dp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen5dp"
                android:layout_marginBottom="@dimen/dimen5dp"
                >
            <RelativeLayout
                android:id="@+id/rltHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dimen5dp"
                android:paddingBottom="@dimen/dimen5dp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen5dp"
                android:layout_marginBottom="@dimen/dimen5dp"
                >
                <TextView
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:layout_toLeftOf="@+id/tvEditHeight"
                    android:text="@string/height"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20"
                    />
                <TextView
                    android:id="@+id/tvEditHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:textAllCaps="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue_dark"
                    android:textSize="@dimen/text_size_20"
                    android:layout_marginRight="@dimen/dimen10dp"
                    />
            </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/rltHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10dp"
                    >
                    <TextView
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:layout_toLeftOf="@+id/tvCurrentHeight"
                        android:text="@string/current"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text_size_20"
                        />
                    <TextView
                        android:id="@+id/tvCurrentHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="170.0 CM"
                        android:textAllCaps="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text_size_20"
                        android:layout_marginRight="@dimen/dimen10dp"
                        />


                </RelativeLayout>
            </RelativeLayout>


            <com.google.android.ads.nativetemplates.TemplateView
                android:id="@+id/my_template"
                app:gnt_template_type="@layout/gnt_medium_template_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>