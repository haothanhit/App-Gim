<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_preview"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <RelativeLayout
            android:padding="@dimen/dimen10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:id="@+id/ivBack"
                android:src="@drawable/bg_btn_state_back"
                android:layout_centerVertical="true"
                />
           <LinearLayout
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_width="wrap_content"
               android:id="@+id/llTitle"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/ivTitle"
                   android:layout_centerVertical="true"
                   android:layout_width="@dimen/dimen35dp"
                   android:layout_height="@dimen/dimen25dp"
                   android:src="@drawable/ic_video"
                   android:scaleType="fitXY"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/dimen10dp"
                   android:text="@string/video"
                   android:textAllCaps="true"
                   android:textStyle="bold"
                   android:id="@+id/tvTitle"
                   android:textColor="@color/white"
                   android:textSize="@dimen/text_size_22"
                   />
           </LinearLayout>
        </RelativeLayout>

        <com.google.android.youtube.player.YouTubePlayerView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen250dp"
            android:id="@+id/youtube_player"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen250dp"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:layout_marginRight="@dimen/dimen10dp"
            android:id="@+id/ivAnimation"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/black"
            android:id="@+id/tvTitleMotion"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black"
            android:id="@+id/tvDetailMotion"
            />
